<%= form_with model: entry do |form| %>
<div>
  <%= form.label :date %><br>
  <%= form.text_field :date%>
  <% entry.errors.full_messages_for(:date).each do |message|%>
  <div><%= message %></div>
  <% end %>
</div>

<div>
  <%= form.label :author %><br>
  <%= form.text_area :author %>
  <% entry.errors.full_messages_for(:author).each do |message|%>
  <div><%= message %></div>
  <% end %>
</div>

<div>
  <%= form.label :body %><br>
  <%= form.text_area :body %>
  <% entry.errors.full_messages_for(:body).each do |message|%>
  <div><%= message %></div>
  <% end %>
</div>

<div>
  <%= form.submit%>
</div>

<% end %>